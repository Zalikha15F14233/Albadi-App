<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="11dp"
    android:layoutDirection="ltr"
    app:cardUseCompatPadding="true"
    android:background="#fff"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="#2222"
                android:gravity="center_vertical|start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:textColor="#111"
                android:id="@+id/text_orderid_itemcart"
                android:layout_height="wrap_content" />


                <TextView
                    android:gravity="center_vertical|start"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:id="@+id/text_status_itemcart"
                    android:layout_height="wrap_content" />


            <TextView
                android:text="#2222"
                android:gravity="center_vertical|start"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:textColor="#111"
                android:id="@+id/text_orderphone_itemcart"
                android:layout_height="wrap_content" />


            <TextView
                android:gravity="center_vertical|start"
                android:text="0"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:id="@+id/text_address_itemcart"
                android:layout_height="wrap_content" />

            <View
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bu_showorder_itemordersattus"
                    android:background="@drawable/busin"
                    android:text="show order "
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/bu_deleatorder_itemordersattus"
                    android:background="@drawable/busin"
                    android:text="Delete "
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bu_payment_itemordersattus"
                    android:background="@drawable/busin"
                    android:text="payment "
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/bu_chat_itemordersattus"
                    android:background="@drawable/busin"
                    android:text=" Chat "
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>





        <!--TextView

            android:background="@android:color/holo_green_light"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="44"
            android:textStyle="italic"
            android:layout_width="40dp"
            android:textColor="#000"
            android:id="@+id/text_amunt_itemcart"
            android:layout_height="30dp" /-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>