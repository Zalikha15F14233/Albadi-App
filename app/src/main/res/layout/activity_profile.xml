<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="150dp"
            android:maxWidth="3000dp"
            android:layout_gravity="center"
            android:src="@color/colorPrimary"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="33dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/text_email_profile"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="user email is : "
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_phone_profile"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="user phone is : "
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_name_profile"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="user name is : "
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/bu_update_profile"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:text="Update"
            android:background="@drawable/busin"
            android:layout_marginBottom="13dp"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/bu_updatePASSWORD_profile"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Update Password"
            android:background="@drawable/busin"
            android:layout_marginBottom="33dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>